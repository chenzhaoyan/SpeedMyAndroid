<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/container"
                  android:orientation="vertical">

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/textView1"
                    android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/textView2"
                    android:text="@string/hello_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button android:id="@+id/button" android:text="Button" android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ListView android:id="@+id/listview" android:layout_width="match_parent"
                  android:layout_height="200dp"></ListView>

        <TextView android:id="@+id/textViewWillBeDisappear" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:text="Will be disaper"/>

        <EditText android:id="@+id/editTextStudentId" android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
        <EditText android:id="@+id/editTextStudentName" android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
        <Button android:text="Add student" android:id="@+id/buttonAddStudent" android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
</RelativeLayout>
